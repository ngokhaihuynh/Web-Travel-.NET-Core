@model WebDuLich.Models.Page

@{
    ViewData["Title"] = "Chi tiết";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string url = $"/page/{Model.Alias}.html";
}

<!-- Blog Start -->
<div class="container-fluid">
    <div class="container">

        <div class="row">
            <div class="col-lg-8">

                <!-- Blog Detail Start -->
                <div class="pb-3">

                    <div class="blog-item">
                        <div class="position-relative">
                            <img class="img-fluid w-100" src="~/images/news/@Model.Image" alt="@Model.Title">

                        </div>
                    </div>
                    <div class="bg-white mb-3" style="padding: 30px;">
                        <div class="d-flex mb-3">
                            <a class="text-primary text-uppercase text-decoration-none" href="">@Model.CreatDate</a>
                           
                            
                        </div>
                        <a href="@url">@Model.PageName</a>

                        @Html.Raw(Model.Contents)
                    </div>
                </div>
                <!-- Blog Detail End -->
                <!-- Comment Form Start -->
                <div class="bg-white mb-3" style="padding: 30px;">
                    <h4 class="text-uppercase mb-4" style="letter-spacing: 5px;">lIÊN HỆ</h4>
                    <form>
                        <div class="form-group">
                            <label for="name">Name *</label>
                            <input type="text" class="form-control" id="name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email *</label>
                            <input type="email" class="form-control" id="email">
                        </div>

                        <div class="form-group">
                            <label for="message">Message *</label>
                            <textarea id="message" cols="30" rows="5" class="form-control"></textarea>
                        </div>
                        <div class="form-group mb-0">
                            <input type="submit" value="GỬI"
                                   class="btn btn-primary font-weight-semi-bold py-2 px-3">
                        </div>
                    </form>
                </div>
                <!-- Comment Form End -->
            </div>

            <div class="col-lg-4 mt-5 mt-lg-0">


                <!-- Search Form -->
                <div class="mb-5">
                    <div class="bg-white" style="padding: 30px;">
                        <div class="input-group">
                            <input type="text" class="form-control p-4" placeholder="Keyword">
                            <div class="input-group-append">
                                <span class="input-group-text bg-primary border-primary text-white">
                                    <i class="fa fa-search"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- Blog End -->
