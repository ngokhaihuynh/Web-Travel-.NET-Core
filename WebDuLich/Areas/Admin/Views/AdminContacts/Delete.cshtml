@model WebDuLich.Models.Contact

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}





<div>
    <h4>Contact</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Họ và tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Số điện thoại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            Ngày liên hệ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            Nội dung
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
    </dl>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="IdLienHe" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index">Back to List</a>
</form>


<style>
    /* CSS cho trang chi tiết liên hệ */
    .row {
        margin-bottom: 20px;
    }

    .col-sm-2 {
        font-weight: bold;
    }

    .col-sm-10 {
        padding-left: 15px;
    }

    dl {
        margin-bottom: 0;
    }

        dl dt, dl dd {
            padding: 10px 0;
            border-bottom: 1px solid #eee;
        }

        dl dt {
            font-weight: bold;
            color: #333;
            margin-right: 30px;
        }

        dl dd {
            color: #666;
            margin-right: 30px;
        }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>


