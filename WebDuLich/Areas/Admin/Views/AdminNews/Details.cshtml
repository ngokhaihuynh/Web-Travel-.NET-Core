@model WebDuLich.Models.News

@{
    ViewData["Title"] = Model.Tile;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<div style="margin-left:30px;">
    <h1 style="font-weight:500">Chi tiết tin tức: @Model.Tile</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Tiêu đề:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tile)
            </dd>
            <dt class="col-sm-2">
                Nội dung ngắn:
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.ShortContent)
            </dd>
            <dt class="col-sm-2">
                Nội dung:
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.Contents)
            </dd>
            <dt class="col-sm-2">
                Ảnh đại diện:
            </dt>
            <dd class="col-sm-10">
                <img width="200" ; height="200" src="~/images/news/@Model.Image" alt="@Model.Tile" />
            </dd>
            <dt class="col-sm-2">
                Trạng thái:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Publish)
            </dd>
            <dt class="col-sm-2">
                Ngày tạo:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreateDate)
            </dd>
            <dt class="col-sm-2">
                Tên tác giả:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Author)
            </dd>
            <dt class="col-sm-2">
                Tags:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tags)
            </dd>
            <dt class="col-sm-2">
                Tin hot:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsHot)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsNewFeed)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsNewFeed)
            </dd>
            @*<dt class="col-sm-2">
                Meta desc:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MetaDesc)
            </dd>
            <dt class="col-sm-2">
                Meta key:
            </dt>*@
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MetaKey)
            </dd>
            <dt class="col-sm-2">
                Lượt xem:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Views)
            </dd>
            @*<dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Acc)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Acc.AccId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cat)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cat.CatId)
            </dd>*@
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.PostId">Sửa</a> |
        <a asp-action="Index">Quay lại</a>
    </div>
</div>

<style>
    dd {
        border: 1px solid #808080;
        width: 90%;
    }

    dt {
        margin-top: 20px;
        line-height: 30px;
        font-weight: bold;
    }
</style>