@model WebDuLich.Models.Customer

@{
    ViewData["Title"] = "Chỉnh sữa khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Improved form group spacing */
    .form-group {
        margin-bottom: 1.5rem;
        width:90%;
    }

  
    .control-label {
        display: block; 
        margin-bottom: 0.5rem; 
        font-weight: bold; 
    }

   
    .form-control {
        padding: 0.5rem;
        font-size: 1rem; 
        border-radius: 0.25rem; 
        width: 100%; 
        box-sizing: border-box;
    }

   
    .btn-primary {
        background-color: #007bff; 
        border: none; 
        padding: 0.5rem 1rem; 
        font-size: 1rem;
        border-radius: 0.25rem; 
        cursor: pointer; 
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .col-md-4 {
            width: 100%;
            padding: 0 1rem; 
        }
    }
</style>

<h1 style="margin-left:20px">Chỉnh sửa tài khoản</h1>

<hr />
