@model WebDuLich.Models.Customer

@{
    ViewData["Title"] = "Chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Chi tiết khách hàng</h1>

<div>
   
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Họ và tên:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        @*<dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Birthday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Birthday)
        </dd>*@
        <dt class="col-sm-2">
            Ảnh đại diện:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Avata)
        </dd>
        <dt class="col-sm-2">
            Nơi ở:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            Email:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Số điện thoại:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        @*<dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.District)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.District)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ward)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ward)
        </dd>*@
        <dt class="col-sm-2">
            Ngày tạo:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt class="col-sm-2">
            Mật khẩu:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        @*<dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Encode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Encode)
        </dd>*@
        <dt class="col-sm-2">
            Lần đăng nhập cuối:
