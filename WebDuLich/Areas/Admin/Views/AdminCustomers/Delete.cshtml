        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Avata)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Avata)
        </dd>
        <dt class="col-sm-2">
           Nơi ở:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
