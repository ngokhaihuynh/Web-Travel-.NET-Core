@using PagedList.Core.Mvc
@model PagedList.PagedList<WebDuLich.Models.Order>
@*@model PagedList.Core.IPagedList<WebDuLich.Models.Page>*@

@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách Danh mục Tour - Trang:" + ViewBag.CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>


<div style="margin-left:30px;margin-top:20px;">
    <a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a>
    <i>>></i>
    <a asp-area="Admin" asp-controller="AdminOrders" asp-action="Index">Danh sách Đơn hàng : page @ViewBag.CurrentPage</a>

</div>

<div style="margin:30px 0 0 30px">
    @*<h1>Index</h1>*@

    <table style="margin-top:20px; width:100%" class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Đơn hàng
                </th>
                <th>
                    Ngày đặt tour
                </th>
                <th>
                    Ngày đi
                </th>
                <th>
                    Tổng tiền
                </th>
                <th>
                    Trạng thái
                </th>
                <th>
                    Tùy chỉnh
                </th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
            <tr>
                <td style="text-align: center; ">
                    @item.OrderId
                </td>
                <td style="text-align: center; ">
                    @item.Cus.FullName
                </td>

                <td style="text-align: center; ">
                    @item.OrderDate
                </td>
                <td style="text-align: center; ">
                    @item.NgayDi
                </td>
                <td style="text-align: center; ">
                    @item.TotalMoney.ToString("#,##0") VND
                </td>
                <td style="text-align: center; ">
                    @item.Transact.Status
                </td>




                <td style="text-align: center; ">
                    <a asp-action="Edit" asp-route-id="@item.OrderId">Cập nhật trạng thái</a> |

                    <a asp-action="Details" asp-route-id="@item.OrderId">Xem</a>
                    @*<a asp-action="Delete" asp-route-id="@item.OrderId">Xóa</a>*@
                </td>

            </tr>
                }
            }

        </tbody>
    </table>
    <style>
        .pagination {
            display: block;
            margin-top: 100px;
        }

            .pagination a {
                color: black;
                float: left;
                padding: 8px 16px;
                text-decoration: none;
                transition: background-color .3s;
            }

                .pagination a.active {
                    background-color: #4CAF50;
                    color: white;
                }

                .pagination a:hover:not(.active) {
                    background-color: #ddd;
                }
    </style>

    <div class="pagination">
        <a href="#">&laquo;</a>
        <a href="#" class="active">1</a>
        <a href="#">2</a>
        <a href="#">&raquo;</a>
    </div>
</div>

