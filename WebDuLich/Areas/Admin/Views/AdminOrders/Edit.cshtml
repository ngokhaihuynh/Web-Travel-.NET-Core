<style>
    /* Canh lề cho nội dung */
    .container {
        margin: 20px auto;
        max-width: 800px;
    }

    /* Định dạng cho các tiêu đề */
    h1, h4 {
        color: #333;
    }

    /* Định dạng cho danh sách chi tiết */
    dl.row {
        border-bottom: 1px solid #ccc;
        padding-bottom: 20px;
    }

    dt {
        font-weight: bold;
        margin-top: 10px;
    }

    dd {
        margin-left: 0;
        margin-bottom: 10px;
    }

    /* Định dạng cho các liên kết */
    .action-links {
        margin-top: 20px;
    }

        .action-links a {
            text-decoration: none;
            padding: 8px 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            background-color: #f0f0f0;
            color: #333;
            margin-right: 10px;
            transition: background-color 0.3s ease;
        }

            .action-links a:hover {
                background-color: #ddd;
            }

    /* Định dạng cho input và label */
    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: bold;
        }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

        .form-control:focus {
            outline: none;
            border-color: #66afe9;
            box-shadow: 0 0 8px 0 rgba(102, 175, 233, 0.6);
        }

    input[type="submit"] {
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        cursor: pointer;
    }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }
</style>

